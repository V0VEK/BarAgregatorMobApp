<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weblab.baragregator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ReceiptAddingActivity"></activity>
        <activity android:name=".WaitersListActivity" />
        <activity android:name=".AddWaiterActivity" />
        <activity android:name=".BarChoosingActivity" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity android:name=".WaiterRoleActivity" />
        <activity android:name=".AddNewBarAdminActivity" />
        <activity android:name=".AppAdminRoleActivity" />
        <activity android:name=".UserProductsListActivity" />
        <activity android:name=".ReceiptNumberChoosingActivity" />
        <activity android:name=".SetNewPassActivity" />
        <activity android:name=".OTPConfirmationActivity" />
        <activity android:name=".RequestEmailActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>